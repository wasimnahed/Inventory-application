extends layout 

block content 
  div(class='container-fluid bg-light content-container')
    div(class='row')
      div(class='col-sm-8 content')
        h1 #{title}: 
          span(style='color: #64748c') #{category.name}
        if category_items.length
          p #[strong Delete the following items before attempting to delete this category.]
          div(style='margin-left:20px;margin-top:20px')

          h4 Items

          dl
          each item in category_items
            dt
              a(href=item.url, class='list-link') #{item.name}
            dd #{item.description}
        
        else 
          p Do you really want to delete this Category?

          form(method='POST', action='')
            div.form-group
              input.form-control(type='hidden', name='categoryId', required='true', value=category._id )

            button.btn.btn-dark.submit-btn(type='submit') Delete