extends layout 

block content 
  div(class='container-fluid bg-light content-container')
    div(class='row')
      div(class='col-sm-8 content')
        h1 #{title}
        p Manage your inventory items here.
        ul
          each item in items_list 
            li.list-item 
              a(href=item.url, class='list-link') #{item.name}
          else 
            li.list-item There are no items available. Add some!

        p 
          a(href='/groceries/item/create', class='list-link') Create New Item